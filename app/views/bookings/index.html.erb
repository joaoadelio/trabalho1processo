<p id="notice"><%= notice %></p>

<h1>Reservas <span><%= link_to 'Nova Reserva', new_booking_path, class: 'btn btn-success' %></span></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Livro</th>
      <th>Início Reserva</th>
      <th>Fim Reserva</th>
      <th>Usuário</th>
      <th>Converter</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><strong><%= booking.book.title %></strong></td>
        <td><%= format_date booking.bookingStartDate %></td>
        <td><%= format_date booking.bnookigEndDate %></td>
        <td><%= booking.user.name %></td>
        <td><%= link_to 'Converter', converterReserva_bookings_path(id: booking.id), class: 'btn btn-secondary' %></td>
        <td style="width: 20%">
          <%= link_to 'Exibir', booking, class: 'btn btn-info btn-sm' %>
          <%= link_to 'Editar', edit_booking_path(booking), class: 'btn btn-warning btn-sm' %>
          <%= link_to 'Excluir', booking, method: :delete, class: 'btn btn-danger btn-sm',  data: { confirm: 'Tem certeza que deseja excluir?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>