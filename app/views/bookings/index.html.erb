<h1>Reservas</h1>

<table>
  <thead>
    <tr>
      <th>Livro</th>
      <th>Início Reserva</th>
      <th>Fim Reserva</th>
      <th>Usuário</th>
      <th>Converter</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.book.title %></td>
        <td><%= booking.bookingStartDate %></td>
        <td><%= booking.bnookigEndDate %></td>
        <td><%= booking.user.name %></td>
        <td><%= link_to 'Converter', converterReserva_bookings_path(id: booking.id) %></td>
        <td><%= link_to 'Show', booking %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

