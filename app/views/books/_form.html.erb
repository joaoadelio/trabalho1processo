<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :book_title %>
  </div>

  <div class="field">
    <%= form.label :author %>
    <%= form.text_field :author, id: :book_author %>
  </div>

  <div class="field">
    <%= form.label :numberPages %>
    <%= form.number_field :numberPages, id: :book_numberPages %>
  </div>

  <div class="field">
    <%= form.label "Disiciplinas" %>
    <% Discipline.all.order(:name).each do|discipline|%>
      <%= check_box_tag "book[discipline_ids][]", discipline.id, @book.disciplines.include?(discipline) %>
      <%= discipline.name %>
    <% end %>
  </div>

  <div class="field">
    <%= form.label "Linguagem" %>
    <%= form.select :language_id, Language.all.order(:name).collect {|linguagem| [linguagem.name, linguagem.id]} %>
  </div>

  <div class="field">
    <%= form.label "Estante" %>
    <%= form.select :bookcase_id, Bookcase.all.order(:name).collect {|estante| [estante.name, estante.id]} %>
  </div>

    <% if(!@book.image.file.nil?) %>
      <%= image_tag(@book.image.thumb.url) %>
    <% end %>


  <%= form.check_box :remove_image %> Remover Imagem

  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image, multiple:false %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
