<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table class="table table-hover text-left">
  <thead>

    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Numberpages</th>
      <th>Disciplinas</th>
      <th>Linguagem</th>
      <th>Estante</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.numberPages %></td>
        <td>
          <% book.disciplines.order(:name).each do |discipline|%>
            <%=discipline.name %><span>, </span>
          <%end%>
        </td>
        <td><%= book.language.name unless book.language.nil?%></td>
        <td><%= book.bookcase.name unless book.bookcase.nil?%></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

