<p id="notice"><%= notice %></p>

<h1>Livros <span><%= link_to 'Novo Livro', new_book_path, class: 'btn btn-success' %></span></h1>

<table class="table table-hover text-left">
  <thead>

    <tr>
      <th>Título</th>
      <th>Autor</th>
      <th>Número de Páginas</th>
      <th>Disciplinas</th>
      <th>Linguagem</th>
      <th>Estante</th>
      <th>Ação</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><strong><%= book.title %></strong></td>
        <td><%= book.author %></td>
        <td><%= book.numberPages %></td>
        <td>
          <% book.disciplines.order(:name).each do |discipline|%>
            <%=discipline.name %><span>, </span>
          <%end%>
        </td>
        <td><%= book.language.name unless book.language.nil?%></td>
        <td><%= book.bookcase.name unless book.bookcase.nil?%></td>
        <td>
        <%= link_to 'Exibir', book, class: 'btn btn-info btn-sm' %>
        <%= link_to 'Editar', edit_book_path(book), class: 'btn btn-warning btn-sm' %>
        <%= link_to 'Excluir', book, method: :delete, class: 'btn btn-danger btn-sm',  data: { confirm: 'Tem certeza que deseja excluir?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>